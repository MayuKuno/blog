   <header>
      <div class="container custom-header">
        <div class="container__logo">
          <a class="container__logo__content" href="/">NINEFS</a>
        </div>
        <div id="nav-toggle">
          <div>
              <span class="toggle"></span>
              <span class="toggle"></span>
              <span class="toggle"></span>
          </div>
        </div>
        <div id="gloval-nav">
          <ul class="navigation">
            <li class="navigation__list-item"><a href="/about">About</a></li>
            <li class="navigation__list-item work-nav"><a href="/works">WORK</a></li>
            <li class="navigation__list-item "><a href="/vlogs">BLOG</a></li>
          </ul>
        </div>
      </div>
    </header>
  <!-- ======================================== -->

<div class="work__show__contents">
  <div class="work__show__contents__top">
    <div class="work__show__contents__top__title">
      <%= @work.title %>
    </div>
    <div class="work__show__contents__top__image">
     <a href="<%= @work.website %>" target="_blank">
      <img src="<%= "#{@work.image}" %>">
     </a>
    </div>
  </div>


  <div class="work__show__contents__bottom">
    <div class="work__show__contents__bottom__items">
      <div class="work__show__contents__bottom__items__overview">
        <div class="work__show__contents__bottom__items__overview__left">
        OVERVIEW
        </div>
        <div class="work__show__contents__bottom__items__overview__right">
        <%= @work.description%>
        <div class="work__show__contents__bottom__items__overview__right__website">
         <a href="<%= @work.readme %>" target="_blank">READMEへ</a>
        </div>
        <div class="work__show__contents__bottom__items__overview__right__readme">
         <a href="<%= @work.website %>" target="_blank">サイトへ</a>
        </div>
        </div>
      </div>
      <div class="work__show__contents__bottom__items__concept">
        <div class="work__show__contents__bottom__items__concept__left">
         制作の目的
        </div>
        <div class="work__show__contents__bottom__items__concept__right">
         <%= @work.concept%>
        </div>
      </div>
      <div class="work__show__contents__bottom__items__skills">
        <div class="work__show__contents__bottom__items__skills__left">
         環境
        </div>
        <div class="work__show__contents__bottom__items__skills__right">
        <% @work.languages.each do |language|%>
        <%= language.text%>
        <% end%>
        </div>
      </div>
      <div class="work__show__contents__bottom__items__period">
        <div class="work__show__contents__bottom__items__period__left">
          作成期間
        </div>
        <div class="work__show__contents__bottom__items__period__right">
        <%= @work.period%>
        </div>
      </div>

    </div>
  </div>
    <% if admin_signed_in? %>
    <div class="postManage">
      <%= link_to "Edit", edit_work_path(@work.id), class: "postManage__edit" %>
      <a class="modal-open-btn postManage__delete">Delete</a>
      <%= link_to "", work_path(@work.id), method: :delete, class: 'item-delete-btn', id: 'delete_button' %>
      <%= link_to "Dashboard", posts_path, class: "postManage__dashboard" %>

    </div>
    </div>
  <% else %>

  <% end %>

</div>




  <!-- ======================================== -->
</div>
</div>
  
<footer>
  <div class="container">
  <ul class="navigation">
      <li class="navigation__list-item footer"><a href="/about">About</a></li>
      <li class="navigation__list-item footer work-nav"><a href="/works">WORK</a></li>
      <li class="navigation__list-item footer"><a href="/vlogs">BLOG</a></li>
    </ul>
    <div class="copyright">
      <p>© 2020 NINEFS</p>
    </div>
    <div class="container__logo">
      <a class="container__logo__content" href="/">NINEFS</a>
    </div>
  </div>
</footer>