         
 <header>
  <div class="container">
    <div class="container__logo">
      <a class="container__logo__content" href="/">NINEFS</a>
    </div>
    <ul class="navigation">
      <li class="navigation__list-item "><a href="/about">About</a></li>
      <li class="navigation__list-item "><a href="/works">WORK</a></li>
      <li class="navigation__list-item blog-nav"><a href="/blogs">BLOG</a></li>
    </ul>
  </div>
</header>
<!-- ======================================== -->    
<div class="post__contents">
  <div class="post__contents__side">
   
    <div class="post__contents__side__top">
      <p>Logged in as</p>
      <div class="post__contents__side__top__name">  
        <%= link_to current_admin.name, "#", class: "post__contents__side__top__name__link" %>
      </div>
      <div class="post__contents__side__top__logout">  
        <%= link_to "Logout", destroy_admin_session_path, class: "post__contents__side__top__logout__link" , method: :delete %>
      </div>
      <div class="post__contents__side__top__edit">  
        <%= link_to "Edit", "#", class: "post__contents__side__top__edit__link" %>
      </div>
    </div>

    <div id="vertical_tab_nav" class="post__contents__side__bottom">
          <ul>
              <li><a href="/posts">BLOG Dashboard</a></li>
              <li class="selected"><a href="/posts">WORK Dashboard</a></li>
          </ul>

    </div>
  </div>

  <section class="post__contents__content">
    <article>
      <div class="post__contents__content__dashboard__blog">
          <table>
            <thead>
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Title</th>
                  <th scope="col">Description</th>
                  <th scope="col">Created_at</th>
                  <th scope="col">
                    <div class="post__contents__content__dashboard__blog__new">
                      <i class="fas fa-edit post__contents__content__dashboard__blog__new__icon"></i>
                      <%= link_to "Add article", new_post_path, class: "post__contents__content__dashboard__blog__new__link" %>
                    </div>
                  </th>
                </tr>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
              <tr>
                <td><%= post.id%></td>
                <td><%= post.title%></td>
                <td class="description"><%= post.description%></td>
                <td><%= post.created_at.strftime '%Y-%m-%d'%></td>
                <td>
                  <%= link_to "Preview", post_path(post.id), class: "postManage__preview" %>
                  <%= link_to "Edit", edit_post_path(post.id), class: "postManage__edit" %>
                  <%= link_to "Delete", post_path(post.id), method: :delete, class: "postManage__delete" %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>    
      </div>
    <%= paginate(@posts) %>

    </article>

    <article>
      <div class="post__contents__content__dashboard__work">
          <table>
            <thead>
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Image</th>
                  <th scope="col">Title</th>
                  <th scope="col">Description</th>
                  <th scope="col">Concept</th>
                  <th scope="col">Period</th>
                  <th scope="col">
                    <div class="post__contents__content__dashboard__work__new">
                      <i class="fas fa-edit post__contents__content__dashboard__blog__new__icon"></i>

                      <%= link_to "Add Work", new_work_path, class: "post__contents__content__dashboard__work__new__link" %>
                    </div>
                  </th>
                </tr>
            </thead>
            <tbody>
              <% @works.each do |work| %>
              <tr class="work">
                <td><%= work.id%></td>
                <td class="image">
                 <img src="<%= "#{work.image}" %>" width="100" height="auto">
                </td>
                <td><%= work.title%></td>
                <td class="description"><%= work.description %></td>
                <td><%= work.concept%></td>
                <td><%= work.period%></td>

                <td>
                  <%= link_to "Preview", work_path(work.id), class: "postManage__preview" %>
                  <%= link_to "Edit", edit_work_path(work.id), class: "postManage__edit" %>
                  <%= link_to "Delete", work_path(work.id), method: :delete, class: "postManage__delete" %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>    
      </div>
      <%= paginate @works, :param_name => 'works' %>

    </article>

     
  </section>
</div>
<!-- ======================================== -->           
<footer>
  <div class="container">
  <ul class="navigation">
      <li class="navigation__list-item "><a href="/about">About</a></li>
      <li class="navigation__list-item "><a href="/works">WORK</a></li>
      <li class="navigation__list-item blog-nav"><a href="/blogs">BLOG</a></li>
    </ul>
    <div class="container__logo">
      <a class="container__logo__content" href="/">NINEFS</a>
    </div>
  </div>
</footer>