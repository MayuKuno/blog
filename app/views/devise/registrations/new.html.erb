<div class="devise__signup__contents">
  <div class="devise__signup__contents__title">
    <p>Sign up</p>
  </div>
<div class="devise__signup__contents__content">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="devise__signup__contents__content__name">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"Name" %>
  </div>

  <div class="devise__signup__contents__content__email">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email" %>
  </div>

  <div class="devise__signup__contents__content__password">
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password (6 characters minimum)" %>
  </div>

  <div class="devise__signup__contents__content__password">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Password confirmation" %>
  </div>

  <div class="devise__signup__contents__content__signup">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
