<div class="blog__contents">
    <div class="blog__contents__top">
      <img src="/assets/blog.jpg" alt="article"/>
    </div>
    <div class="blog__contents__bottom">
      <div class="blog__contents__bottom__articles">
          <span class="blog__contents__bottom__articles__categoryname"> <%= @category.text %></span>
      <% @category.vlogs.each do |vlog| %>
        <div class="blog__contents__bottom__articles__list">
          <div class="blog__contents__bottom__articles__list__img">
            <%= link_to vlog_path(vlog.id), target: "_blank" do %>
              <img src="<%= "#{vlog.image}" %>"> 
            <% end %> 
          </div>
          <div class="blog__contents__bottom__articles__list__title">
            <%= link_to vlog.title, vlog_path(vlog.id) %>
          </div>
          <% vlog.categories.each do |category| %>
          <li class = "blog__contents__bottom__articles__list__category">
            <%= link_to category.text, category_path(category.id), class: "details__contents__article__titles__category__link" %>
          </li>
          <% end %>

          <div class="blog__contents__bottom__articles__list__time">
            <%= vlog.created_at.strftime '%Y-%m-%d' %>
          </div>
          <div class="blog__contents__bottom__articles__list__description">
            <%= vlog.description %>
          </div>
        </div>
      <% end %>
      <div class='vlogs__paginate'><%= paginate(@categories) %></div>
    </div>

